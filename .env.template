# MongoDB Configuration
# For local development, use localhost
# For docker-compose, use 'mongo' as the hostname
MONGO_URI=mongodb://localhost:27017

# gRPC Service Ports (default values, can be modified)
ORCHESTRATOR_PORT=50051
TECHNICAL_SERVICE_PORT=50052
BEHAVIORAL_SERVICE_PORT=50053
CONSENT_SERVICE_PORT=50054
METRICS_SERVICE_PORT=50055

# Service Configuration
MAX_INTERVIEW_DURATION_MINUTES=50
TECHNICAL_EVALUATION_WEIGHT=0.5
BEHAVIORAL_EVALUATION_WEIGHT=0.3
CULTURAL_EVALUATION_WEIGHT=0.2

# External APIs
# Required: Obtain API keys from respective service providers
# DO NOT commit actual API keys to version control
NVIDIA_API_KEY=<YOUR_NVIDIA_API_KEY_HERE>
DAILY_API_KEY=<YOUR_DAILY_API_KEY_HERE>
DAILY_API_URL=<YOUR_DAILY_API_URL_HERE>

# Logging and Monitoring
LOG_LEVEL=<LOG_LEVEL>
MONITORING_ENDPOINT=<YOUR_MONITORING_ENDPOINT_HERE>

# Security
# Required: Generate these values securely and never commit them
# JWT_SECRET: Use a secure random string generator (min 32 characters)
# ENCRYPTION_KEY: Generate a 32-byte random key using a secure method
JWT_SECRET=<YOUR_SECURE_JWT_SECRET_HERE>
ENCRYPTION_KEY=<YOUR_SECURE_32_BYTE_KEY_HERE>

